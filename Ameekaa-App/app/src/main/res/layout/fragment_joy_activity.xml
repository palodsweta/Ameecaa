<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none"
    android:background="@color/background_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Activity Toolkit"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sometimes the best way to change our mood is to change what we're doing. Let's map out some of your favorite activities."
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="24dp"/>

        <!-- Hobbies & Passions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Hobbies &amp; Passions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's a hobby you enjoy—something creative or calming, whether you're full of energy or just lounging on the couch?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editHobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your favorite hobbies..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Comfort Media -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Comfort Media"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What shows, movies, or online creators always lift your mood or make you laugh?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your favorite shows, movies, or creators..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Movement -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Power of Movement"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What kind of physical activity helps you feel better—whether it's to burn off stress, feel centered, or just gently recharge?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editMovement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your favorite physical activities..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView> 