<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none"
    android:background="@color/background_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Mind Toolkit"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your own mind and memories are your most powerful resource. Let's collect some positive thoughts your companion can remind you of."
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="24dp"/>

        <!-- Mental Reset -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mental Reset"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What usually helps shift your mindset when you're stuck in a loop? (e.g. deep breath, journaling, music)"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editMentalReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your mental reset techniques..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Self-Talk -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Self-Talk"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is there a phrase or thought you remind yourself of in hard moments?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editSelfTalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your supportive self-talk..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Curiosity -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curiosity"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What questions or topics always spark wonder in you?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editCuriosity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share what sparks your curiosity..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Focus Tools -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Focus Tools"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you use anything to anchor your thoughts? (e.g. breathing, counting, visualizing light or colors)"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editFocusTools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your focus techniques..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView> 