<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none"
    android:background="@color/background_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensory Toolkit"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our senses are a powerful, direct path to changing our mood. Let's find some things your companion can suggest to ground you in the present moment."
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="24dp"/>

        <!-- Sight -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sight"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What kind of visuals bring you a sense of peace or joy? (e.g. nature, colors, art, cityscapes, animals)"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editSight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share what visuals comfort you..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Sound -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which music or sounds help you calm down, feel energized, or stay focused?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your favorite sounds..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Smell -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smell"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is there a smell you find particularly calming or happy? (e.g. fresh baked bread, lavender, sandalwood)"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editSmell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share comforting scents..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Taste -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taste"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's a favorite food or drink that feels like a hug in a mug (even just thinking of them)?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTaste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your comfort foods..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Touch -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Touch"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Any textures or objects you like to hold or be around? (e.g. soft blanket, warm tea mug, cool breeze)"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editTouch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share comforting textures..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView> 