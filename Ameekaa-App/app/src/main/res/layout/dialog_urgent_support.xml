<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_black"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This sounds really hard. You don't have to face this alone. You matter, and help is available right now."
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:layout_marginBottom="24dp"/>

        <!-- Crisis Helplines Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24/7 Crisis Support"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="16dp"/>

        <!-- 988 Lifeline -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card988"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="988 Suicide &amp; Crisis Lifeline"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn988Call"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Call 988"
                        android:textColor="@color/text_white"
                        android:background="@drawable/button_background"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btn988Text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Text 988"
                        android:textColor="@color/text_white"
                        android:background="@drawable/button_background"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- iCall -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardIcall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iCall Helpline"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnIcall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call iCall"
                    android:textColor="@color/text_white"
                    android:background="@drawable/button_background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- AASRA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAasra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AASRA"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnAasra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call AASRA"
                    android:textColor="@color/text_white"
                    android:background="@drawable/button_background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Trusted Circle Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Trusted Circle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Would you like to reach out to someone from your trusted circle?"
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTrustedContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue Without Contacting"
            android:textColor="@color/text_white"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView> 