<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:title="Sentiment Analysis Results"
        app:titleTextColor="@color/text_white"
        app:logo="@drawable/ic_amica_leaf"
        app:logoDescription="Amica Logo"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio Sentiment Analysis"
                android:textColor="@color/text_white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/user_name_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analysis for: --"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>

            <!-- Processing Time Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2A2A2A"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processing Performance"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/processing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gemma Analysis Time: --"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Emotion & Sentiment Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#333333"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primary Emotion &amp; Sentiment"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/primary_emotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primary Emotion: --"
                    android:textColor="#FF9800"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/sentiment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sentiment: --"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/confidence_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confidence: --"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Negative Spiral Detection Card -->
            <LinearLayout
                android:id="@+id/negative_spiral_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#333333"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Negative Spiral Detection"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/spiral_detected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: --"
                    android:textColor="#F44336"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/detected_triggers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Triggers: --"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/spiral_reasoning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analysis: --"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

            <!-- Topic & Keywords Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#333333"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Themes &amp; Topics"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/key_themes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Themes: --"
                    android:textColor="#9C27B0"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/important_keywords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keywords: --"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btn_generate_nudge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate Personalized Nudge"
                    android:textColor="@color/text_white"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_analyze_another"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Analyze Another Audio"
                    android:textColor="@color/text_white"
                    android:backgroundTint="#2196F3"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btn_back_to_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back to Main"
                    android:textColor="@color/text_white"
                    android:backgroundTint="#666666"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout> 