<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none"
    android:background="@color/background_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Meaning Toolkit"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This part of your toolkit explores your values, your strengths, and moments that make you feel proud, purposeful, and whole."
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="24dp"/>

        <!-- Values -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Values"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What matters deeply to you in life? (e.g. kindness, creativity, growth, service)"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your core values..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Legacy Moments -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Legacy Moments"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's something you've done that you're proud of?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editLegacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your proud moments..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Spiritual/Inner Strength -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spiritual/Inner Strength"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is there a belief, prayer, or inner sense that gives you peace during storms?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editSpiritual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your sources of inner strength..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

        <!-- Helping Others -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Helping Others"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When do you feel joy while helping or caring for someone else?"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editHelping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_gray"
            android:hint="Share your experiences of helping others..."
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView> 