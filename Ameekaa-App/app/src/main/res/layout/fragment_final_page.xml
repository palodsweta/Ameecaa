<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:scrollbars="none"
    android:background="@color/background_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Completion Icon -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_dialog_info"
            app:tint="@color/text_white"
            android:layout_marginBottom="32dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Personal Companion is Ready"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Main Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for sharing your journey with us. Your companion will start listening quietly and compassionately in the background of your life when you want."
            android:textSize="16sp"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Key Points Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remember"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• This is your tool\n\n• The more you interact with it, the more personal and effective its support will become\n\n• This is a journey, and we're here to support you every step of the way"
                    android:textSize="16sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingExtra="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Privacy Reminder -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your privacy and comfort are our priority. You can always adjust your preferences or update your information from your profile."
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Get Started Button -->
        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Begin Your Journey"
            android:textColor="@color/text_white"
            android:background="@drawable/button_background"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>

    </LinearLayout>
</ScrollView> 