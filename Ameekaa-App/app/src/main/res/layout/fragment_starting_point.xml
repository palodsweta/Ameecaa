        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Question 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I couldn't seem to experience any positive feeling at all"
            android:textSize="16sp"
            android:textColor="@color/text_white"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/q1_never"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Never"
                android:textColor="@color/text_white"/>

            <RadioButton
                android:id="@+id/q1_sometimes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sometimes"
                android:textColor="@color/text_white"/>

            <RadioButton
                android:id="@+id/q1_often"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Often"
                android:textColor="@color/text_white"/>

            <RadioButton
                android:id="@+id/q1_always"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Almost Always"
                android:textColor="@color/text_white"/>
        </RadioGroup>

