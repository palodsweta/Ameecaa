<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none"
    android:background="@color/background_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Safety"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you've been feeling really low lately, it's important we know how deeply it's affecting you â€” not to judge, but so we can support you better. You're not alone, and there's always help available."
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="24dp"/>

        <!-- Crisis Resources Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCrisisResources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24/7 Crisis Support"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="988 Suicide &amp; Crisis Lifeline\nCall or text 988\nAvailable 24/7"
                    android:textSize="16sp"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnCall988"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call 988"
                    android:textColor="@color/text_white"
                    android:background="@drawable/button_background"
                    android:padding="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Question 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have you been feeling like life is too heavy, or that it's just too hard to go on?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/q1_never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q1_sometimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sometimes"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q1_often"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Often"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q1_always"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Almost Always"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"/>
        </RadioGroup>

        <!-- Question 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have you had thoughts that you'd be better off not being here?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/q2_never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q2_sometimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sometimes"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q2_often"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Often"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q2_always"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Almost Always"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"/>
        </RadioGroup>

        <!-- Question 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have these thoughts ever turned into a wish to not wake up or to hurt yourself?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/q3_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q3_yes_wouldnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes, but I wouldn't act on them"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q3_yes_unsure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes, and I'm not sure if I would act on them"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q3_yes_thinking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes, and I've been thinking about how I might do it"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"/>
        </RadioGroup>

        <!-- Question 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have you ever made a plan or taken any steps toward harming yourself?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/q4_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q4_thought"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I've thought about how, but haven't done anything"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q4_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I've taken some steps (e.g., writing a note, gathering items)"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/q4_attempted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I've done something but didn't go through with it"
                android:textColor="@color/text_white"
                android:buttonTint="@color/text_white"/>
        </RadioGroup>

    </LinearLayout>
</ScrollView> 