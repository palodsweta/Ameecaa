<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Companion Introduction"
        app:titleTextColor="@color/text_white"
        app:logo="@drawable/ic_amica_leaf"
        app:logoDescription="Ameekaa Logo"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/btnContinue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Before we begin, here's something important."
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your companion is designed to be a safe, private, and non-judgmental space—here to support you with empathy as you navigate your emotional world."
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How Ameekaa Works:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It Listens"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="With your permission, Ameekaa gently picks up on the tone, patterns, and words in your conversations—whether with Ameekaa, with others, or even with yourself."
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It Understands"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Over time, it learns to recognize your unique emotional rhythms—especially when you're heading into a low or overwhelming phase."
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It Supports"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When needed, it gently nudges you with personalized support—a calming check-in, a grounding reminder, or words of encouragement you've helped create."
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your trust and privacy mean everything.\nYou're always in control of what Ameekaa hears, sees, and stores."
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/text_gray"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>

    <CheckBox
        android:id="@+id/checkboxUnderstand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I've read and understood how Ameekaa works."
        android:textColor="@color/text_white"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnContinue"/>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="@color/text_white"
        android:background="@color/button_background"
        android:padding="16dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout> 